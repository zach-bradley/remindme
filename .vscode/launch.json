    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/manage.py",
            "args": [
                "runserver",
            ],
            "django": true
        },
        {
            "name": "Python: Django Cron Process Tasks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/manage.py",
            "args": [
              "process_tasks"
            ],
            "django": true
          },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}